//Created a program that makes vertical bars using mouse Y position, 
//as well as adjusted the widths of the bars and added a semi-transparent background.

var barWidth = 55;
    var hueC = 60;
    colorMode(HSB,100);
    noStroke();

var draw = function(){
    hueC = mouseY;
    fill(hueC,255,255);
    fill(20,100,255,9);
    rect(mouseX,0, barWidth, height);
};
