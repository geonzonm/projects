textSize(100);
textAlign(CENTER);

var draw = function(){
    if(mouseY < 150){
        background(255,0,0);
        fill(0);
        ellipse(200,200,300,300);
        fill(255);
        text("RED",0,150,400,200);
    }
    else if(mouseY < 250){
        background(0,0,255);
        fill(0);
        rect(40,240,320,100);
        fill(255);
        text("BLUE",0,150,400,200);
        
    }
    else{
        background(0,255,0);
        fill(0);
        arc(200,200,300,300,90,270);
        fill(255);
        text("GREEN",0,150,400,200);
    }
};
